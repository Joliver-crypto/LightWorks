{
  "type": "device.template",
  "label": "Template Device",
  "icon": "⚙️",
  "color": "bg-gray-500",
  "category": "motion",
  "description": "Template device for creating new hardware components",
  "size": {
    "width": 2,
    "height": 1
  },
  "commands": [
    {
      "name": "connect",
      "label": "Connect",
      "description": "Connect to device",
      "args": [
        {
          "name": "identifier",
          "type": "string",
          "required": false,
          "default": ""
        }
      ]
    },
    {
      "name": "disconnect",
      "label": "Disconnect",
      "description": "Disconnect from device",
      "args": []
    },
    {
      "name": "initialize",
      "label": "Initialize",
      "description": "Initialize device",
      "args": []
    },
    {
      "name": "reset",
      "label": "Reset",
      "description": "Reset device to default state",
      "args": []
    },
    {
      "name": "get_status",
      "label": "Get Status",
      "description": "Get device status",
      "args": []
    }
  ],
  "telemetry": [
    {
      "name": "status",
      "label": "Status",
      "type": "string"
    },
    {
      "name": "temperature",
      "label": "Temperature",
      "unit": "°C",
      "type": "number"
    },
    {
      "name": "voltage",
      "label": "Voltage",
      "unit": "V",
      "type": "number"
    },
    {
      "name": "current",
      "label": "Current",
      "unit": "A",
      "type": "number"
    }
  ],
  "properties": [
    {
      "name": "enabled",
      "label": "Enabled",
      "type": "boolean",
      "default": false
    },
    {
      "name": "mode",
      "label": "Mode",
      "type": "select",
      "default": "normal",
      "options": ["normal", "high_performance", "low_power"]
    },
    {
      "name": "timeout",
      "label": "Timeout",
      "type": "number",
      "default": 5.0
    }
  ],
  "driver": {
    "module": "device-template.scripts.template_controller",
    "class": "TemplateController",
    "connection": {
      "type": "usb",
      "port": "auto",
      "timeout": 1.0
    }
  },
  "capabilities": {
    "windows": {
      "os": "Windows",
      "transport": "Native Driver",
      "features": {
        "basicControl": true,
        "advancedControl": true,
        "monitoring": true,
        "configuration": true,
        "calibration": true
      },
      "limits": {
        "maxValue": 100,
        "minValue": 0,
        "maxFrequency": 1000,
        "minFrequency": 1
      }
    },
    "linux": {
      "os": "Linux",
      "transport": "V4L2/USB",
      "features": {
        "basicControl": true,
        "advancedControl": false,
        "monitoring": true,
        "configuration": false,
        "calibration": false
      },
      "limits": {
        "maxValue": 50,
        "minValue": 0,
        "maxFrequency": 500,
        "minFrequency": 1
      }
    },
    "macos": {
      "os": "macOS",
      "transport": "UVC/AVFoundation",
      "features": {
        "basicControl": true,
        "advancedControl": false,
        "monitoring": false,
        "configuration": false,
        "calibration": false
      },
      "limits": {
        "maxValue": 25,
        "minValue": 0,
        "maxFrequency": 100,
        "minFrequency": 1
      }
    }
  }
}